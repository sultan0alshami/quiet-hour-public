{% comment %}
  Parallax Background Section - Scrolling parallax effect with overlay content
{% endcomment %}

<section class="parallax-section" data-parallax>
  <div class="parallax-background" style="background-image: url({{ section.settings.background_image | img_url: '1920x1080' }}); opacity: {{ section.settings.opacity | default: 0.7 }};"></div>
  <div class="parallax-content">
    <div class="container">
      {% if section.settings.title %}
        <h2>{{ section.settings.title }}</h2>
      {% endif %}
      {% if section.settings.description %}
        <p>{{ section.settings.description }}</p>
      {% endif %}
      {% if section.settings.button_label and section.settings.button_link %}
        <a href="{{ section.settings.button_link }}" class="btn-primary">{{ section.settings.button_label }}</a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Parallax Background",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "صورة الخلفية",
      "required": true
    },
    {
      "type": "range",
      "id": "opacity",
      "label": "الشفافية",
      "min": 0.1,
      "max": 1,
      "step": 0.1,
      "default": 0.7
    },
    {
      "type": "text",
      "id": "title",
      "label": "العنوان"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "الوصف"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "نص الزر"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "رابط الزر"
    }
  ],
  "presets": [
    {
      "name": "Parallax Background"
    }
  ]
}
{% endschema %}

