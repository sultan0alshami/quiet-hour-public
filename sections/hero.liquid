<section class="hero-section"{% if section.settings.background_image %} style="background-image: url({{ section.settings.background_image | img_url: 'master' }});" {% endif %}>
  <div class="overlay"></div>
  <div class="container">
    <div class="hero-content">
      <h1>{{ section.settings.title }}</h1>
      <p>{{ section.settings.subtitle }}</p>
      {% if section.settings.cta_label and section.settings.cta_link %}
        <a class="btn-primary" href="{{ section.settings.cta_link }}">{{ section.settings.cta_label }}</a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "العنوان الرئيسي",
      "default": "استعد لوقت هادئ ومريح"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "النص الفرعي",
      "default": "تجربة سبا متكاملة تجمع بين الرفاهية والراحة في أجواء هادئة."
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "نص زر الدعوة",
      "default": "احجز الآن"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "رابط زر الدعوة",
      "default": "/collections/services"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "صورة الخلفية"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}


