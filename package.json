{
  "name": "quiet-hour-theme",
  "version": "1.0.0",
  "description": "Quiet Hour Salla theme",
  "scripts": {
    "clean": "rimraf public && mkdir public",
    "build:css": "cpy src/assets/styles/app.css public --rename=app.css --flat",
    "build:js": "cpy src/assets/scripts/app.js public --rename=app.js --flat",
    "build": "npm-run-all clean build:css build:js",
    "watch": "chokidar \"src/assets/**/*\" -c \"npm run build\""
  },
  "devDependencies": {
    "cpy-cli": "^5.0.0",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5"
  }
}

