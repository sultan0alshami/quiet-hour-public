{% comment %}
  Square Photos Section - Grid of square images with first item featured (2x2)
{% endcomment %}

<section class="square-photos-section">
  <div class="container">
    {% if section.settings.title %}
      <h2 class="section-title">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="square-photos-grid">
      {% for block in section.blocks %}
        <div class="square-photo-item{% if forloop.first %} featured{% endif %}">
          <a href="{{ block.settings.link | default: '#' }}">
            <img src="{{ block.settings.image | img_url: '600x600' }}" alt="{{ block.settings.alt_text | default: block.settings.caption }}">
            {% if block.settings.caption %}
              <div class="photo-caption">
                <p>{{ block.settings.caption }}</p>
              </div>
            {% endif %}
          </a>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Square Photos",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "عنوان القسم"
    }
  ],
  "blocks": [
    {
      "type": "photo",
      "name": "صورة",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "الصورة",
          "required": true
        },
        {
          "type": "url",
          "id": "link",
          "label": "الرابط"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "النص البديل"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "التعليق (اختياري)"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Square Photos"
    }
  ]
}
{% endschema %}

