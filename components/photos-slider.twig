{% comment %}
  Photos Slider Section - Image carousel with navigation
{% endcomment %}

<section class="photos-slider-section">
  <div class="container">
    {% if section.settings.title %}
      <h2 class="section-title">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="photos-slider-wrapper">
      <div class="photos-slider" data-slider>
        {% for block in section.blocks %}
          <div class="slide">
            <img src="{{ block.settings.image | img_url: '1200x600' }}" alt="{{ block.settings.alt_text | default: block.settings.caption }}">
            {% if block.settings.caption %}
              <div class="slide-caption">
                <p>{{ block.settings.caption }}</p>
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
      {% if section.blocks.size > 1 %}
        <div class="slider-controls">
          <button class="prev-btn" data-prev aria-label="السابق">‹</button>
          <button class="next-btn" data-next aria-label="التالي">›</button>
        </div>
        <div class="slider-dots">
          {% for block in section.blocks %}
            <button class="dot{% if forloop.first %} active{% endif %}" data-slide="{{ forloop.index0 }}" aria-label="شريحة {{ forloop.index }}"></button>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Photos Slider",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "عنوان القسم"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "شريحة",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "الصورة",
          "required": true
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "النص البديل"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "التعليق (اختياري)"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Photos Slider",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}

