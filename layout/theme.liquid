<!DOCTYPE html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{{ page_title | default: store.name }}</title>
    {{ 'theme.css' | asset_url | stylesheet_tag }}
    <style>
      :root {
        --primary-color: {{ settings.primary_color | default: '#4A3728' }};
        --secondary-color: {{ settings.secondary_color | default: '#E8DCC6' }};
        --background-color: {{ settings.background_color | default: '#FFF8F0' }};
        --text-color: {{ settings.text_color | default: '#2C2416' }};
        --accent-color: {{ settings.accent_color | default: '#8B6F47' }};
      }
    </style>
    {{ content_for_header }}
  </head>
  <body>
    {% section 'header' %}

    <main role="main">
      {{ content_for_layout }}
    </main>

    {% section 'footer' %}

    {{ 'theme.js' | asset_url | script_tag }}
    {{ content_for_footer }}
  </body>
</html>


