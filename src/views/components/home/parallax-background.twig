{% comment %}
  Parallax Background Section - Scrolling parallax effect with overlay content
{% endcomment %}

<section class="parallax-section" data-parallax>
  <div class="parallax-background" style="background-image: url({{ component.settings.background_image | img_url('1920x1080') }}); opacity: {{ component.settings.opacity | default(0.7) }};"></div>
  <div class="parallax-content">
    <div class="container">
      {% if component.settings.title %}
        <h2>{{ component.settings.title }}</h2>
      {% endif %}
      {% if component.settings.description %}
        <p>{{ component.settings.description }}</p>
      {% endif %}
      {% if component.settings.button_label and component.settings.button_link %}
        <a href="{{ component.settings.button_link }}" class="btn-primary">{{ component.settings.button_label }}</a>
      {% endif %}
    </div>
  </div>
</section>

