{% comment %}
  Main homepage template
  This is the default template for the store homepage
{% endcomment %}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ store.name }} - {{ page.title }}</title>
  
  {% render 'head' %}
</head>
<body>
  {% section 'header' %}
  
  <main>
    {% section 'hero' %}
    {% section 'services' %}
    {% section 'about' %}
    {% section 'testimonials' %}
  </main>
  
  {% section 'footer' %}
  
  {% render 'scripts' %}
</body>
</html>

