{% comment %}
  Fixed Banner Section - Sticky/fixed promotional banner
{% endcomment %}

{% if section.settings.enable %}
  <div class="fixed-banner fixed-banner-{{ section.settings.position }}" style="{% if section.settings.background_image %}background-image: url({{ section.settings.background_image | img_url: 'master' }});{% endif %} background-color: {{ section.settings.background_color | default: 'var(--primary-color)' }};">
    <div class="container">
      <div class="fixed-banner-content">
        {% if section.settings.title %}
          <h2>{{ section.settings.title }}</h2>
        {% endif %}
        {% if section.settings.description %}
          <p>{{ section.settings.description }}</p>
        {% endif %}
        {% if section.settings.button_label and section.settings.button_link %}
          <a href="{{ section.settings.button_link }}" class="btn-primary">{{ section.settings.button_label }}</a>
        {% endif %}
        {% if section.settings.show_close %}
          <button class="fixed-banner-close" data-close-banner>×</button>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Fixed Banner",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable",
      "label": "تفعيل البانر",
      "default": false
    },
    {
      "type": "select",
      "id": "position",
      "label": "موضع البانر",
      "options": [
        {
          "value": "fixed",
          "label": "ثابت (Fixed)"
        },
        {
          "value": "sticky",
          "label": "لاصق (Sticky)"
        },
        {
          "value": "relative",
          "label": "عادي (Relative)"
        }
      ],
      "default": "fixed"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "صورة الخلفية"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "لون الخلفية",
      "default": "#4A3728"
    },
    {
      "type": "text",
      "id": "title",
      "label": "العنوان"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "الوصف"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "نص الزر"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "رابط الزر"
    },
    {
      "type": "checkbox",
      "id": "show_close",
      "label": "إظهار زر الإغلاق",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Fixed Banner"
    }
  ]
}
{% endschema %}

