{% comment %}
  Featured Products Section - Highlighted product showcase
{% endcomment %}

<section class="featured-products-section">
  <div class="container">
    {% if section.settings.title %}
      <h2 class="section-title">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="featured-products-grid{% if section.settings.unite_height %} unite-cards-height{% endif %}">
      {% for block in section.blocks %}
        {% assign product = all_products[block.settings.product] %}
        {% if product %}
          <div class="featured-product-card">
            <a href="{{ product.url }}">
              {% if product.featured_image %}
                <div class="product-image">
                  <img src="{{ product.featured_image | img_url: '400x400' }}" alt="{{ product.title }}">
                  {% if product.compare_at_price > product.price %}
                    <span class="sale-badge">خصم</span>
                  {% endif %}
                </div>
              {% endif %}
              <div class="product-info">
                <h3>{{ product.title }}</h3>
                <p class="price">
                  {{ product.price | money }}
                  {% if product.compare_at_price > product.price %}
                    <span class="compare-price">{{ product.compare_at_price | money }}</span>
                  {% endif %}
                </p>
                {% if section.settings.show_description and product.description %}
                  <p class="product-description">{{ product.description | strip_html | truncate: 100 }}</p>
                {% endif %}
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "عنوان القسم",
      "default": "منتجات مميزة"
    },
    {
      "type": "checkbox",
      "id": "unite_height",
      "label": "توحيد ارتفاع البطاقات",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "إظهار الوصف",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "منتج",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "اختر المنتج"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}

