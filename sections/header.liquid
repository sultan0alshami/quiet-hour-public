{% comment %}
  Header section - Navigation and logo
{% endcomment %}

<header class="site-header">
  <div class="container">
    <div class="header-content">
      <div class="logo">
        <a href="/">
          {% if section.settings.logo %}
            <img src="{{ section.settings.logo | file_url }}" alt="{{ store.name }}">
          {% else %}
            <span class="logo-text">{{ store.name }}</span>
          {% endif %}
        </a>
      </div>
      
      <nav class="main-nav">
        <ul>
          <li><a href="/">الرئيسية</a></li>
          <li><a href="/collections/services">الخدمات</a></li>
          <li><a href="/pages/about">من نحن</a></li>
          <li><a href="/pages/contact">اتصل بنا</a></li>
        </ul>
      </nav>
      
      <div class="header-actions">
        <a href="/cart" class="cart-icon">
          <span>السلة</span>
          <span class="cart-count">{{ cart.item_count }}</span>
        </a>
      </div>
    </div>
  </div>
  {% if section.settings.enable_mega_menu %}
    {% section 'mega-menu' %}
  {% endif %}
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "شعار المتجر"
    },
    {
      "type": "checkbox",
      "id": "enable_mega_menu",
      "label": "تفعيل ميجا منيو",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}

