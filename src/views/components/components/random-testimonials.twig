{% comment %}
  Random Testimonials Section - Shuffled testimonial display
{% endcomment %}

<section class="random-testimonials-section">
  <div class="container">
    {% if component.settings.title %}
      <h2 class="section-title">{{ component.settings.title }}</h2>
    {% endif %}
    <div class="testimonials-grid">
      {% assign shuffled_blocks = component.blocks | shuffle %}
      {% for block in shuffled_blocks limit: component.settings.display_count %}
        <div class="testimonial-card">
          {% if block.settings.avatar %}
            <img src="{{ block.settings.avatar | img_url: '100x100' }}" alt="{{ block.settings.name }}" class="avatar">
          {% endif %}
          <div class="stars">
            {% for i in (1..block.settings.rating) %}
              â˜…
            {% endfor %}
          </div>
          <p class="message">"{{ block.settings.message }}"</p>
          <p class="name">{{ block.settings.name }}</p>
          {% if block.settings.role %}
            <p class="role">{{ block.settings.role }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
