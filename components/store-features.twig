{% comment %}
  Store Features Section - Icon-based feature highlights
{% endcomment %}

<section class="store-features-section">
  <div class="container">
    {% if section.settings.title %}
      <h2 class="section-title">{{ section.settings.title }}</h2>
    {% endif %}
    <div class="features-grid">
      {% for block in section.blocks %}
        <div class="feature-item">
          {% if block.settings.icon %}
            <div class="feature-icon">
              <img src="{{ block.settings.icon | img_url: '100x100' }}" alt="{{ block.settings.title }}">
            </div>
          {% elsif block.settings.icon_class %}
            <div class="feature-icon">
              <i class="{{ block.settings.icon_class }}"></i>
            </div>
          {% else %}
            <div class="feature-icon">
              <span class="default-icon">✓</span>
            </div>
          {% endif %}
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Store Features",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "عنوان القسم"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "ميزة",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "أيقونة (صورة)"
        },
        {
          "type": "text",
          "id": "icon_class",
          "label": "أو فئة الأيقونة (CSS class)",
          "info": "مثال: sicon-truck, sicon-shield-check"
        },
        {
          "type": "text",
          "id": "title",
          "label": "العنوان",
          "required": true,
          "default": "ميزة المتجر"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "الوصف",
          "default": "وصف الميزة"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Store Features",
      "blocks": [
        {
          "type": "feature"
        },
        {
          "type": "feature"
        },
        {
          "type": "feature"
        }
      ]
    }
  ]
}
{% endschema %}

