<section class="testimonials-section">
  <div class="container">
    <div class="section-header">
      <h2>{{ section.settings.title }}</h2>
      <p>{{ section.settings.subtitle }}</p>
    </div>

    <div class="testimonials-grid">
      {% for block in section.blocks %}
        <blockquote class="testimonial-card">
          <p class="testimonial-message">“{{ block.settings.message }}”</p>
          <div class="testimonial-meta">
            <span class="name">{{ block.settings.name }}</span>
            {% if block.settings.role %}
              <span class="role">{{ block.settings.role }}</span>
            {% endif %}
          </div>
        </blockquote>
      {% else %}
        <p class="empty-state">أضف شهادات العملاء من إعدادات القسم.</p>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "عنوان القسم",
      "default": "ماذا يقول عملاؤنا؟"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "النص الفرعي",
      "default": "آراء حقيقية من عملاء استمتعوا بتجربة Quiet Hour."
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "شهادة",
      "settings": [
        {
          "type": "textarea",
          "id": "message",
          "label": "نص الشهادة",
          "default": "كانت تجربتي رائعة! الطاقم محترف والأجواء مريحة للغاية."
        },
        {
          "type": "text",
          "id": "name",
          "label": "اسم العميل",
          "default": "هدى العتيبي"
        },
        {
          "type": "text",
          "id": "role",
          "label": "وصف العميل (اختياري)",
          "default": "عميلة مميزة"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}


