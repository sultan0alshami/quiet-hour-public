<section class="services-section">
  <div class="container">
    <div class="section-header">
      <h2>{{ section.settings.title }}</h2>
      <p>{{ section.settings.subtitle }}</p>
    </div>

    <div class="services-grid">
      {% for block in section.blocks %}
        <div class="service-card">
          {% if block.settings.icon %}
            <img src="{{ block.settings.icon | img_url: '200x' }}" alt="{{ block.settings.title }}">
          {% endif %}
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.description }}</p>
        </div>
      {% else %}
        <p class="empty-state">أضف خدماتك من إعدادات القسم.</p>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Services",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "عنوان القسم",
      "default": "خدمات سبا فاخرة"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "النص الفرعي",
      "default": "اختبر تجربة فريدة مع قائمة خدماتنا المتنوعة."
    }
  ],
  "blocks": [
    {
      "type": "service",
      "name": "خدمة",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "صورة الخدمة"
        },
        {
          "type": "text",
          "id": "title",
          "label": "عنوان الخدمة",
          "default": "جلسة تدليك"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "وصف الخدمة",
          "default": "استرخِ مع جلسة تدليك متكاملة تزيل التوتر وتعيد التوازن."
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Services",
      "blocks": [
        {
          "type": "service"
        },
        {
          "type": "service"
        },
        {
          "type": "service"
        }
      ]
    }
  ]
}
{% endschema %}


