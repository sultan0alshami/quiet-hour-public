<section class="about-section">
  <div class="container">
    <div class="about-content">
      <div class="about-text">
        <h2>{{ component.settings.title }}</h2>
        <p>{{ component.settings.description }}</p>
        {% if component.settings.points != blank %}
          <ul class="about-points">
            {% for point in component.settings.points | split: '\n' %}
              {% if point != blank %}
                <li>{{ point }}</li>
              {% endif %}
            {% endfor %}
          </ul>
        {% endif %}
      </div>
      {% if component.settings.image %}
        <div class="about-image">
          <img src="{{ component.settings.image | img_url: 'master' }}" alt="{{ component.settings.title }}">
        </div>
      {% endif %}
    </div>
  </div>
</section>
