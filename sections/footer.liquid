{% comment %}
  Footer section
{% endcomment %}

<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>{{ section.settings.title | default: store.name }}</h3>
        <p>{{ section.settings.subtitle | default: 'منصة حجز خدمات السبا المميزة' }}</p>
      </div>
      
      <div class="footer-section">
        <h4>{{ section.settings.links_title | default: 'روابط سريعة' }}</h4>
        <ul>
          {% if section.settings.link_1_title and section.settings.link_1_url %}
            <li><a href="{{ section.settings.link_1_url }}">{{ section.settings.link_1_title }}</a></li>
          {% endif %}
          {% if section.settings.link_2_title and section.settings.link_2_url %}
            <li><a href="{{ section.settings.link_2_url }}">{{ section.settings.link_2_title }}</a></li>
          {% endif %}
          {% if section.settings.link_3_title and section.settings.link_3_url %}
            <li><a href="{{ section.settings.link_3_url }}">{{ section.settings.link_3_title }}</a></li>
          {% endif %}
          {% if section.settings.link_4_title and section.settings.link_4_url %}
            <li><a href="{{ section.settings.link_4_url }}">{{ section.settings.link_4_title }}</a></li>
          {% endif %}
          {% unless section.settings.link_1_title %}
            <li><a href="/">{{ 'general.home' | t }}</a></li>
            <li><a href="/collections/services">{{ 'general.services' | t }}</a></li>
            <li><a href="/pages/about">{{ 'general.about' | t }}</a></li>
            <li><a href="/pages/contact">{{ 'general.contact' | t }}</a></li>
          {% endunless %}
        </ul>
      </div>
      
      <div class="footer-section">
        <h4>{{ section.settings.contact_title | default: 'معلومات التواصل' }}</h4>
        <p>{{ section.settings.contact_email | default: settings.contact_email | default: 'البريد: support@quiethour.sa' }}</p>
        <p>{{ section.settings.contact_phone | default: settings.contact_phone | default: 'الهاتف: 966500000000' }}</p>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ store.name }}. {{ section.settings.copyright | default: 'جميع الحقوق محفوظة.' }}</p>
      <p>
        <a href="{{ section.settings.privacy_link | default: '/pages/privacy' }}">سياسة الخصوصية</a> | 
        <a href="{{ section.settings.faq_link | default: '/pages/faq' }}">الأسئلة الشائعة</a>
      </p>
    </div>
  </div>
</footer>

